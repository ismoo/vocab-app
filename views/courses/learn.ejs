<% include ../partials/header %>

<div class="modal" id="translationModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="translation"><%=word.word%></h5>
            </div>
            <div class="modal-body">
                <div class="vocab-content">
                    <p><%=word.translation%></p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 text-center">
                    <form action="/courses/<%=id%>/?word=<%=num%>&pass=false&_method=PUT" method="post">
                        <button type="submit" class="btn btn-danger answer-box">Don't know</button>
                    </form>
                </div>
                <div class="col-sm-6 text-center">
                    <form action="/courses/<%=id%>/?word=<%=num%>&pass=true&_method=PUT" method="post">
                        <button type="submit" class="btn btn-success answer-box">I know</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="vocab-container">
        <div class=row>
            <h2><%=courseName%></h2>
            <div class=col-md-2></div>
            <div class=col-md-8>
                <div class="vocab-content">
                    <p><%=word.word%></p>
                </div>
            </div>
            <div class=col-md-2></div>
        </div>
        <div class="text-center"><button type="button" class="btn btn-answer" data-toggle="modal" data-target="#translationModal">See Answer</button></div>
    </div>
</div>

<% include ../partials/footer %>