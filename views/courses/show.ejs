<% include ../partials/header %>

<div class="container">
    <div class="transHeader">
        <h1>My Courses</h1>
    </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-7">
            <% courses.forEach(function (el){ %>
                <div class="media jumbotron">
                    <div class="media-left">
                        <img src="<%= el.image %>" style="width:60px">
                    </div>
                    <div class="media-body">
                        <div class="media-heading">
                            <h2><%= el.name %></h2>
                        </div>
                        <p><%= el.description %></p>
                    </div>
                    <div class="media-right">
                        <button type="button" class="btn btn-danger">Delete</button>
                    </div>
                </div>
                <hr>
            <% }); %>
        </div>
        <div class="col-md-4">
                <ul>
                    <li><a href="/courses/new" class="btn btn-primary" role="button">Add new course</a></li>
                    <li><button type="button" class="btn btn-secondary">Placeholder</button></li>
                    <li><button type="button" class="btn btn-secondary">Placeholder two</button></li>
                </ul>
        </div>
    </div>
</div>

<% include ../partials/footer %>